{
  "manifest_version": 2,
  "name": "Kurzajka",
  "version": "1.3",
  "author": "Michal Kosciesza <michal@mkiol.net>",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "48": "res/kurzajka-48.png",
    "96": "res/kurzajka-96.png"
  },

  "web_accessible_resources": [
    "res/*.png",
    "res/*.mp3"
  ],

  "background": {
    "scripts": ["main.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://portalpacjenta.luxmed.pl/PatientPortal/Reservations/Reservation/*"],
      "js": ["luxmed.js"]
    }
  ],

  "permissions": [
    "notifications"
  ],

  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "{c2134a21-b5d8-4f1e-be43-08c3d0694926}",
      "update_url": "https://github.com/mkiol/Kurzajka/raw/master/xpi/update.json"
    }
  }
}
